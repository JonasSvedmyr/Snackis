@page
@model Snackis.Pages.Auth.RegisterModel
@{
}


<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title mx-auto">Register</h3>
            </div>
            <div class="panel-body">
                <form method="post" accept-charset="UTF-8" role="form">
                    <label asp-for="Username"></label>
                    <div class="form-group">
                        <input asp-for="Username" class="form-control" placeholder="Username" name="username" type="text">
                    </div>
                    <label asp-for="Email"></label>
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" name="email" type="email">
                    </div>
                    <label asp-for="Password"></label>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Password" name="password" type="password" value="">
                    </div>
                    <label>Confirm Password</label>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Confirm password" name="ConfirmPassword" type="password" value="">
                    </div>
                    <input class="btn btn-primary btn-lg btn-block" type="submit" value="Register">
                </form>
                <hr />
                <div>
                    <span>
                        <p style="color: red">@Model.ErrorMessage</p>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>